#!/usr/bin/env bash
if [ -z $PINT_PATH ]; then
	p=`dirname "$0"`
	PINT_PATH=`dirname "$p"`
fi
ocamlopt \
	-I "$PINT_PATH" \
	-I "$PINT_PATH/bindings" \
	-I "$PINT_PATH/pintlib" \
	-I "$PINT_PATH/phlib" \
	-cclib -lm -cclib -lRmath -cclib -lcamlidl\
	-I +facile facile.cmxa\
	nums.cmxa str.cmxa unix.cmxa pint.cmxa \
"$@"
