all: nc

include Makefile.common

SOURCES = \
	$(BINDINGS_SOURCES)\
	$(PINTLIB_SOURCES) \
	$(PHLIB_SOURCES) \
	$(UI_SOURCES) \
	phreach.ml

RESULT = ph-reach

install:
	install -d $(DESTDIR)$(PREFIX)/bin
	install -m 0755 $(RESULT) $(DESTDIR)$(PREFIX)/bin

include OCamlMakefile
