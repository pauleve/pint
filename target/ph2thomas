all: nc

include Makefile.common

SOURCES = \
	$(BINDINGS_SOURCES)\
	$(PINTLIB_SOURCES) \
	$(PHLIB_SOURCES) \
	$(UI_SOURCES) \
	$(DIST_SOURCES) \
	$(PH2THOMAS_SOURCES) \
	ph2thomas.ml

LIBS := $(PINTLIB_LIBS) $(PHLIB_LIBS) unix

RESULT = bin/ph2thomas

install:
	install -m 0755 $(RESULT) $(DESTDIR)$(PREFIX)/bin

include OCamlMakefile
