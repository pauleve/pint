all: nc

include Makefile.common

SOURCES = \
	$(DIST_SOURCES) \
	$(BINDINGS_SOURCES) \
	$(PINTLIB_SOURCES) \
	$(ANLIB_SOURCES) \
	pintlcg.ml

LIBS = $(COMMON_LIBS) $(PINTLIB_LIBS) $(PHLIB_LIBS)

RESULT = bin/pint-lcg

install:
	install -d $(DESTDIR)$(PREFIX)/bin
	install -m 0755 $(RESULT) $(DESTDIR)$(PREFIX)/bin

include OCamlMakefile
